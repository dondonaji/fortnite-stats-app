{
    "apiEndpoint": "https://fortnite-api.com/v2/stats/br/v2",
    "queryParams": {
        "name": "string (required) - Epic Games username",
        "accountType": "string (optional) - epic | psn | xbl (default: epic)",
        "timeWindow": "string (optional) - season | lifetime (default: lifetime)"
    },
    "headers": {
        "Authorization": "string (required) - API Key"
    },
    "exampleResponse": {
        "status": 200,
        "data": {
            "account": {
                "id": "d5f0d9ba072a4fbd9",
                "name": "Tfue"
            },
            "battlePass": {
                "level": 200,
                "progress": 0
            },
            "image": "https://fortnite-api.com/images/cosmetics/br/cid_xxx/icon.png",
            "stats": {
                "all": {
                    "overall": {
                        "score": 1500000,
                        "scorePerMin": 25.5,
                        "scorePerMatch": 450,
                        "wins": 4248,
                        "top3": 500,
                        "top5": 800,
                        "top10": 1500,
                        "top25": 2000,
                        "kills": 85000,
                        "kd": 5.21,
                        "matches": 16000,
                        "winRate": 26.5,
                        "minutesPlayed": 180000,
                        "lastModified": "2024-11-02T16:34:39Z"
                    },
                    "solo": "...same structure as overall...",
                    "duo": "...same structure as overall...",
                    "squad": "...same structure as overall...",
                    "ltm": "...same structure as overall..."
                },
                "keyboardMouse": "...same structure as all...",
                "gamepad": "...same structure as all...",
                "touch": null
            }
        }
    },
    "errorResponses": {
        "400": "Missing required parameter",
        "403": "Private profile or Player Not Found",
        "404": "Account not found",
        "429": "Rate limit exceeded",
        "500": "Internal server error"
    },
    "notes": [
        "Stats are cumulative (lifetime) unless timeWindow=season",
        "Some fields may be null if player has private profile",
        "Competitive/Ranked data NOT available via this endpoint",
        "History is injected by our backend from Supabase snapshots"
    ]
}